<%- include('../partials/header') %>
<nav>
    <a href="/tickets/new">Add Ticket</a>
    <a href="/flights">Back to all Flights</a>
    <a href="/tickets">Tickets</a>
    <img src="/images/Aeroplane5.svg">
</nav>
<body>
    <h1>Enter a New Flight</h1>
    <form action="/flights" method="POST">
        <label>Airline:   
            <select name="airline">
                <option value="American">American</option>
                <option value="Delta">Delta</option>
                <option value="Southwest">Southwest</option>
                <option value="United">United</option>
            </select>
        </label><br><br>
        <label>Airport:
            <select name="airport">
                <option value="ATL">Atlanta (ATL)</option>
                <option value="DFW">Dallas FootWorth (DFW)</option>
                <option value="DEN">Denver (DEN)</option>
                <option value="LAX">Los Angles (LAX)</option>
                <option value="SAN">San Francisco(SAN)</option>
            </select><br><br>
            <label>Flight Number:
                <input type="text" name="flightNo">
            </label>
            <h6>*Value must be between 10 and 9999</h6>
            <label>Departure Date:
                <input type="date" name="departs">
            </label>
            <h6>*If left empty, default will be one year from creation date</h6>
            <input type="submit" value="Add Flight" id='flight-btn'>
        </form>
        <br><br>
        <br><br>
        <br><br>
        <!-- <h5>If a values above box are not completed - page will return blank form, and not save the flight</h5> -->
  </body>
</html>