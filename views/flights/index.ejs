<%- include('../partials/header') %>
<body>
  <nav>
  <a href="/flights/new/">Add New Flight</a>
  <a href="/tickets/new">Add Ticket</a>
  <a href="/tickets">Tickets</a>
  <img src="/images/Aeroplane5.svg">
  </nav>
  <h1>Flight List</h1>
  
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No</th>
        <th>Departure Date</th>
      </tr>
    </thead>
    <tbody>
        <br><% flights.forEach(f => { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
        </tr> 
          <% }); %>
    </tbody>
  </table>
</body>
</html>